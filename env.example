# Server Configuration
PORT=8080
HOST=0.0.0.0
ENV=development
READ_TIMEOUT=15s
WRITE_TIMEOUT=15s
IDLE_TIMEOUT=60s
SHUTDOWN_TIMEOUT=10s

# Database Configuration
# Format: user:password@tcp(host:port)/dbname?charset=utf8mb4&parseTime=True&loc=Local
# For local MySQL: user:pass@tcp(localhost:3306)/interview_trainer?charset=utf8mb4&parseTime=True&loc=Local
# For PlanetScale: user:pass@tcp(aws.connect.psdb.cloud)/dbname?charset=utf8mb4&parseTime=True&loc=Local&tls=true
DSN=user:password@tcp(localhost:3306)/dbname?charset=utf8mb4&parseTime=True&loc=Local
DB_MAX_OPEN_CONNS=25
DB_MAX_IDLE_CONNS=5
DB_CONN_MAX_LIFETIME=5m

# Authentication Configuration
# Generate a strong secret: openssl rand -hex 32
JWT_SECRET=your-secret-key-change-this-in-production
# This is checked on every API request - make it long and random
API_KEY=your-api-key-change-this-in-production
# Google OAuth (optional, for user login)
GOOGLE_OAUTH_CLIENT_ID=
GOOGLE_OAUTH_CLIENT_SECRET=
SESSION_EXPIRATION=24h
# Set to false for local dev over HTTP
COOKIE_SECURE=true
COOKIE_SAME_SITE=Lax

# CORS Configuration
# Comma-separated list of allowed origins
# For local dev: http://localhost:3000,http://localhost:5173
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173

# AI Service API Keys
# Get from https://elevenlabs.io/
ELEVEN_LABS_API_KEY=
# Get from https://platform.openai.com/
OPEN_AI_API_KEY=
# Get from https://www.unrealspeech.com/
UNREAL_SPEECH_API_KEY=
# For Vertex AI - get via: gcloud auth print-access-token
# Or set up service account credentials
GCLOUD_API_KEY=
# Get from Google's AI Maker Suite: https://makersuite.google.com/app/apikey
# Only needed for text generation models (PaLM, Gemini)
VERTEX_AI_API_KEY=
# Optional - for vector search/embeddings
# Get from https://www.pinecone.io/
PINECONE_API_KEY=
PINECONE_CONNECTION=
